<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper 
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.xunyin.lanshan_exam.mapper.MovieMapper">

    <select id="searchByName" resultType="org.xunyin.lanshan_exam.pojo.Movie">
        select *
        from movie
        <where>
            <if test="name != null">
        name like contact(#{name})
        </if>
        </where>
    </select>
    <select id="searchByActor" resultType="org.xunyin.lanshan_exam.pojo.Movie">
        select * from movie
        <where>
        <if test="actor != null">
        actor like contact(#{actor})
        </if>
        </where>
    </select>
    <select id="searchByScore" resultType="org.xunyin.lanshan_exam.pojo.Movie">
        select * from movie
        <where>
        <if test="score != null">
          order by score desc
        </if>
        </where>
    </select>
</mapper>